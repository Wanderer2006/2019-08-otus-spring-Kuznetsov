<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionsDao" class="ru.kusoft.dao.QuestionsDaoFromCSV">
        <property name="fileResource" value="/questions-answers.csv"/>
    </bean>

    <bean id="drawQuestionService" class="ru.kusoft.service.DrawQuestionServiceImpl"/>

    <bean id="inputAnswerService" class="ru.kusoft.service.InputAnswerServiceImpl"/>

    <bean id="testingService" class="ru.kusoft.service.TestingServiceImpl">
        <constructor-arg name="questionsDao" ref="questionsDao"/>
        <constructor-arg name="drawQuestionService" ref="drawQuestionService"/>
        <constructor-arg name="inputAnswerService" ref="inputAnswerService"/>
    </bean>


</beans>
